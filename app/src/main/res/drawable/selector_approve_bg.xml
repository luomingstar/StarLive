<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <!-- 圆角 -->
            <corners
                android:radius="200dp" /><!-- 设置圆角半径 -->

            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/text_666"
                android:dashWidth="0dp"/>

            <solid
                android:color="@color/text_666"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape >
            <!-- 圆角 -->
            <corners
                android:radius="200dp" /><!-- 设置圆角半径 -->

            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/text_5a5b"
                android:dashWidth="0dp"/>

            <solid
                android:color="@color/text_5a5b"/>
        </shape>
    </item>

    <item >
        <shape >
            <!-- 圆角 -->
            <corners
                android:radius="200dp" /><!-- 设置圆角半径 -->

            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/text_5a5b"
                android:dashWidth="0dp"/>

            <solid
                android:color="@color/text_5a5b"/>
        </shape>
    </item>


</selector>