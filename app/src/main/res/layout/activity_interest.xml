<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:background="@drawable/shape_interest_background"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_420">

        <RelativeLayout
            android:id="@+id/rl_interest_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

            <TextView
                android:text="@string/tv_interest"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/text_5a5b"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/page"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout_finish"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_interest_finish"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@drawable/shape_earning"
                android:gravity="center"
                android:text="保存"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_interest"
            android:layout_below="@id/rl_interest_title"
            android:layout_above="@id/rl_layout_finish"
            android:overScrollMode="never"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</RelativeLayout>