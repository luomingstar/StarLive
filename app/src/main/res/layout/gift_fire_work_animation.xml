<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

<!--红-->
    <ImageView
        android:id="@+id/fireworks_flower1"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/fireworks_flower1"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_180"
        />
    <!--蓝-->
    <ImageView
        android:id="@+id/fireworks_flower2"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/fireworks_flower2"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_200"
        />
    <!--黄-->
    <ImageView
        android:id="@+id/fireworks_flower3"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/fireworks_flower3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_100"
        />
    <!--绿-->
    <ImageView
        android:id="@+id/fireworks_flower4"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/fireworks_flower4"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_180"
        />


    <ImageView
        android:id="@+id/fireworks"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_240"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/fireworks_10"
        android:layout_marginTop="@dimen/dp_200"
        />




</FrameLayout>