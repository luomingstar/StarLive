<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/red_theme"
        >
        
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/xvideo_top_back"
            android:scaleType="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            />

        <ImageView
            android:id="@+id/like"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/xvideo_top_like_no"
            android:layout_toLeftOf="@+id/share"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/xvideo_top_share"
            android:layout_toLeftOf="@+id/more"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/more"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/xvideo_top_more"
            android:layout_toLeftOf="@+id/attation"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/attation"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/xvideo_top_attation"
            android:layout_toLeftOf="@+id/head"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_centerVertical="true"
            />

        <com.a99live.zhibo.live.view.weight.NewCircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:scaleType="centerCrop"
            app:border_color="#FFF"
            app:border_width="0dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/logo_head"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>







</FrameLayout>