<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/layout_title" layout="@layout/title"/>

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/page" />

    <RelativeLayout
        android:id="@+id/layout_tel_me"
        android:background="@drawable/selector_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center|left">

        <TextView
            android:id="@+id/tv_tel_me"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/tel_me" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/me_icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/layout_feed_back"
        android:background="@drawable/selector_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center|left">

        <TextView
            android:id="@+id/tv_feed_back"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/feed_back" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/me_icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/layout_clear"
        android:background="@drawable/selector_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center|left">

        <TextView
            android:id="@+id/tv_clear"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/clear" />

        <TextView
            android:id="@+id/tv_cache"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/text_666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:text="2.8k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/layout_about"
        android:background="@drawable/selector_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center|left">

        <TextView
            android:id="@+id/tv_about"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/about" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/me_icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/layout_check"
        android:background="@drawable/selector_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center|left">

        <TextView
            android:id="@+id/tv_check"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/check" />

        <TextView
            android:id="@+id/tv_version"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:text="V.1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/layout_user_agreement"
        android:background="@drawable/selector_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center|left">

        <TextView
            android:id="@+id/tv_user_agreement"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/user_agreement" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/me_icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/page" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/page" />

    <TextView
        android:id="@+id/exits"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/selector_list_item"
        android:gravity="center"
        android:text="@string/logout"
        android:textColor="@color/text_5a5b"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/page" />

</LinearLayout>