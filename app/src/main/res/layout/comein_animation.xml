<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/comein_bg"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_21_40_animation" />

        <TextView
            android:id="@+id/lv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="LV30"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_80"
            android:textSize="@dimen/sp_14"
            android:text="加入直播间"
            android:layout_marginRight="@dimen/dp_50"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/comein_vip_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_55">


        <ImageView
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:src="@drawable/level_80_animation" />

        <RelativeLayout
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_55"
            android:layout_alignParentBottom="true"
            >


            <com.a99live.zhibo.live.view.weight.NewCircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/logo_head"
                app:border_color="#FFF"
                android:layout_alignParentBottom="true"
                app:border_width="0dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/huangguan" />

            <TextView
                android:id="@+id/vip_lv_tv"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_level_animation_avatar_bg"
                android:gravity="center"
                android:text="LV32"
                android:textColor="#fef432"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vip_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="加入直播间"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_130"
            android:textSize="@dimen/sp_14"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white" />


    </RelativeLayout>

</FrameLayout>