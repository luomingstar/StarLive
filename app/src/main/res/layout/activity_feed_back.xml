<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/page"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_feedback">

    <include android:id="@+id/layout_title" layout="@layout/title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/bg_page" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_190"
            android:background="@color/white"
            android:gravity="top"
            android:layout_marginBottom="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:scrollbars="vertical"
            android:textColor="@color/text_222"
            android:hint="@string/feed_back_hint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:text="0/400"
            android:textColor="@color/text_666"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
    
    <TextView
        android:id="@+id/tv_feed_back_finish"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_48"
        android:text="@string/feed_back_finish"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_666"
        android:gravity="center"
        android:background="@drawable/shape_search"/>

</LinearLayout>