<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/page"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/layout_title" layout="@layout/title"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_70"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_live_time"
                android:text="@string/live_time_tips"
                android:textColor="@color/text_222"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:text="00:02:29"
                android:textColor="@color/text_999"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_look"
            android:layout_alignTop="@id/ll_time"
            android:layout_marginRight="@dimen/dp_70"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_looker_num"
                android:text="@string/live_members_tips"
                android:textColor="@color/text_222"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_looker"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:text="235"
                android:textColor="@color/text_999"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_below="@id/ll_time"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:text="@string/finish_live_hint"
            android:textColor="@color/text_999"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/page"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_reap_cion"
            android:text="@string/reap_coin"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_222"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_coin"
            android:layout_below="@id/tv_reap_cion"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_999"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/transpond_hint"
            android:textColor="@color/text_999"
            android:textSize="@dimen/sp_12"
            android:layout_below="@id/tv_coin"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120">
        <RelativeLayout
            android:id="@+id/award_relative"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:background="@drawable/award"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_208"
                android:layout_height="@dimen/dp_76" />

            <TextView
                android:id="@+id/tv_award"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_165"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/go_approve"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_48"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_withe_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证后更易上热门，获更多奖励"
                android:textColor="@color/text_999"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马上认证"
                android:textColor="@color/text_5a5b"
                android:textSize="@dimen/sp_16"
                android:layout_toLeftOf="@+id/renz"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />

            <ImageView
                android:id="@+id/renz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/renzheng_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/share_at_finish"
        android:text="@string/share_my"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:background="@drawable/shape_account_focus"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_48" />

    <TextView
        android:id="@+id/tv_back_home"
        android:text="@string/btn_return_home"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_5a5b"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_bt_normal"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_48" />

</LinearLayout>