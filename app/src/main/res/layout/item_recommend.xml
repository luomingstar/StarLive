<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout_recommend"
    android:layout_marginLeft="@dimen/dp_11"
    android:layout_marginRight="@dimen/dp_11"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.a99live.zhibo.live.view.weight.NewCircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_recommend_head"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_68"
        android:background="@mipmap/head"
        android:scaleType="centerCrop"
        app:border_color="#FFF"
        app:border_width="0dp" />

    <!--<com.a99live.zhibo.live.view.weight.NewCircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_recommend_mengban"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_68"
        android:src="@color/mengban_red"
        android:scaleType="centerCrop"
        app:border_color="#FFF"
        app:border_width="0dp" />-->
    
    <ImageView
        android:id="@+id/iv_recommend_mengban"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignBottom="@+id/iv_recommend_head"
        android:layout_alignRight="@+id/iv_recommend_head"
        android:src="@drawable/recommend_select"
        />

    <TextView
        android:id="@+id/tv_item_recommend"
        android:layout_below="@id/iv_recommend_head"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_666"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>